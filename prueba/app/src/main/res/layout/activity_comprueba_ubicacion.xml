<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompruebaUbicacion">

    <TextView
        android:id="@+id/pregunta"
        android:layout_width="379dp"
        android:layout_height="82dp"
        android:fontFamily="@font/oswald_medium"
        android:gravity="center"
        android:text="@string/pregunta"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206" />

    <AutoCompleteTextView
        android:id="@+id/pais"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:hint="@string/pregunta_"
        android:fontFamily="@font/oswald_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pregunta"
        app:layout_constraintVertical_bias="0.217" />

    <Button
        android:id="@+id/avanzar"
        android:layout_width="175dp"
        android:layout_height="75dp"
        android:background="@drawable/botonredondo"
        android:fontFamily="@font/oswald_medium"
        android:onClick="botonUbi"
        android:text="@string/botonubi"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pais"
        app:layout_constraintVertical_bias="0.383" />

</androidx.constraintlayout.widget.ConstraintLayout>